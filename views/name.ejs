<%- include("templates/headers.ejs") %>

<div class="bar">
  <div class="modal modal-sheet position-static d-block p-4 py-md-5 bar" tabindex="-1" role="dialog" id="modalSignin">
    <div class="modal-dialog"  role="document">
      <div class="modal-content rounded-4 shadow" style="background-color: #C63D2F;">
        <div class="modal-header p-5 pb-4 border-bottom-0">
          <h1 class="fw-bold mb-0 fs-2 text-light">Find your Drink</h1>
        </div>
  
        <div class="modal-body p-5 pt-0">
          <form id="nameForm">
            <div class="form-floating mb-3">
              <input type="text" class="form-control rounded-3" id="floatingInput" placeholder="name@example.com">
              <label for="floatingInput">Drink Name</label>
            </div>
            <button class="w-100 mb-2 btn btn-lg rounded-" style="background-color: #FF9B50;" type="submit">Sign up</button>
            <small class="text-body-secondary"></small>
            <hr class="my-4">
            <p class="lead text-center text-light">I'd be happy to help find a drink! </p>
          </form>
        </div>
      </div>
    </div>
  </div>


<div class="container px-4 py-5 hideDiv" id="nameResult">
  <h2 class="pb-2 border-bottom">Drinks</h2>

  <div class="row row-cols-1 row-cols-lg-3 align-items-stretch g-4 py-5">
    <% for (let drink of formattedDrinks) { %>
      <div class="col">
        <div class="card card-cover h-100 overflow-hidden text-bg-dark rounded-4 shadow-lg" style="background-image: url('unsplash-photo-1.jpg');">
          <div class="d-flex flex-column h-100 p-5 pb-3 text-white text-shadow-1">
            <h3 class="pt-5 mt-5 mb-4 display-6 lh-1 fw-bold"></h3>
            <!-- Display other details of the drink -->
          </div>
        </div>
      </div>
    <% } %>
  </div>
    

</div>

<%- include("templates/footer.ejs") %>